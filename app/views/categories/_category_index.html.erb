<!-- app/views/categories/_category_index.html.erb -->
<h4 class="border-bottom pb-2">Liste des Catégories</h4>
<%= form_with(url: update_categories_path, local: true, data: { turbo_frame: 'settings_frame' }) do %>
  <table class="table table-striped table-dark">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @categories.each do |category| %>
        <tr id="<%= dom_id(category) %>">
          <td>
            <%= text_field_tag "categories[#{category.id}]", category.name, class: "form-control" %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <div class="actions">
    <%= submit_tag "Mettre à jour les catégories", class: "btn btn-primary" %>
  </div>
<% end %>

<%= form_with(model: Category.new, url: categories_path, local: true, data: { turbo_frame: 'settings_frame' }) do |form| %>
  <div id="category_form">
    <div class="mb-3">
      <%= form.label :name, "Nouvelle catégorie", class: "form-label" %>
      <%= form.text_field :name, class: "form-control" %>
    </div>
    <div class="actions">
      <%= form.submit "Ajouter une catégorie", class: "btn btn-success" %>
    </div>
  </div>
<% end %>
