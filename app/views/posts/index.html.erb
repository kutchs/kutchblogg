<div class="container-fluid custom-background">
  <div class="row gx-4" id="posts">
    <% @posts.each do |post| %>
      <div class="col-12 col-sm-6 col-md-4 col-lg-3">
        <div class="mb-4 custom-card">
          <%= render post %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="d-flex flex-column align-items-center mt-4">
    <div class="d-flex justify-content-center">
      <%= will_paginate @posts, renderer: BootstrapPagination::Rails, class: 'pagination' %>
    </div>
    <%= link_to "New post", new_post_path, class: "btn custom2-btn mt-3" %>
  </div>
</div>
