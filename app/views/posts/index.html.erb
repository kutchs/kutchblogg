

<div class="container">
  <div class="row g-4" id="posts">
    <% @posts.each do |post| %>
      <div class="col-md-3"> <!-- Change col-md-4 to col-md-3 -->
        <%= render post %>
      </div>
    <% end %>
  </div>
</div>
<div class="d-flex justify-content-center mt-4">
  <%= will_paginate @posts, class: 'pagination' %>
</div>

<%= link_to "New post", new_post_path, class: "btn btn-primary mt-3" %>
